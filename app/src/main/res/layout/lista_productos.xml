<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/listaImageProduct"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtlistaNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="NombreProducto"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/listaImageProduct"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtlistaPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="$00.00"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/listaImageProduct"
        app:layout_constraintTop_toBottomOf="@+id/txtlistaNombreProducto" />

    <TextView
        android:id="@+id/txtlistaCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Categoria"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/listaImageProduct"
        app:layout_constraintTop_toBottomOf="@+id/txtlistaPrecio" />

</androidx.constraintlayout.widget.ConstraintLayout>